<div class="card text-center mb-4"> <!-- maybe change to current_user later -->
    <div class="card-body">
        <div class="row justify-content-center">
            <%= gravatar_for @user %>
        </div>
        <div class="row">
            <div class="col mt-2">
                <p class="card-text">
                    <%= link_to @user.username, @user.username %>
                    <br /><%= @user.name %>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col mt-2">
                <% if @user.is_signed_in? %>
                <%= image_tag("onlinenow.gif", :alt => "Online Now!", :width => "50%") %>
                <% end %>
            </div>
        </div>
        <% if !current_user?(@user) %>
        <div class="row mt-2">
            <button class="btn btn-primary btn-block">Add Friend</button>
        </div>
        <% end %>
    </div>
</div>